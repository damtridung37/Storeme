@model OrderViewModel

<div class="py-5 text-center">
    <h2>Checkout form</h2>
    <p class="lead">This is the last step to complete your order.</p>
</div>

<div class="row g-5">
    <div class="col-md-6 col-lg-4 order-md-last">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-primary">Your cart</span>
            <span class="badge bg-primary rounded-pill">@Model.Cart.Count()</span>
        </h4>
        <ul class="list-group mb-3 cover-container">
            @foreach (var item in Model.Cart)
            {
                <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                    <h6 class="my-0">@item.Item.Product.Brand @item.Item.Product.DeviceModel </h6>
                    <small class="text-muted">@item.Item.Product.CategoryTitle</small>
                </div>
                <span class="text-muted">@item.Item.Product.Price €</span>
            </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                <span>Total (EUR)</span>
                <strong>@Model.Cart.Sum(x=>x.Item.Product.Price)</strong>
            </li>
        </ul>
    </div>
    <div class="col-md-7 col-lg-8">
        <form asp-action="Create" asp-controller="Orders">
            <div class="row g-3">
                <div class="col-sm-6">
                    <label for="firstName" class="form-label">First name</label>
                    <input type="text" disabled asp-for="User.FirstName" class="form-control" id="firstName" placeholder="">
                </div>

                <div class="col-sm-6">
                    <label for="lastName" class="form-label">Last name</label>
                    <input type="text" class="form-control" disabled asp-for="User.LastName" id="lastName" placeholder="">
                </div>

                <div class="col-12">
                    <label for="phone" class="form-label">Phone</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text">BG</span>
                        <input type="text" class="form-control" disabled asp-for="User.PhoneNumber" id="phone" placeholder="Phone">
                    </div>
                </div>

                <div class="col-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" disabled asp-for="User.Email" id="email" placeholder="you@example.com">
                </div>

                <div class="col-12">
                    <label for="address" class="form-label">Address</label>
                    <input type="text" class="form-control" disabled asp-for="User.FullAddress" id="address" placeholder="1234 Main St" required>
                </div>
            </div>
            <hr class="my-4">
            <button class="w-100 btn btn-primary btn-lg" type="submit">Continue to checkout</button>
        </form>
    </div>
</div>