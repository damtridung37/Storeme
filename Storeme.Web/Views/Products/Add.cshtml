@model ProductBindingModel

@{
    ViewData["Title"] = "Add";
}

<section class="py-1 text-center container">
    <div class="row py-sm-3">
        <div class="col-lg-6 col-sm-8 mx-auto">
            <h3 class="fw-light">Create</h3>
            <p class="lead text-muted">Fill the inputs to create a product.</p>
        </div>
    </div>
</section>
<div class="row">
    <div class="">
        <form asp-action="Add" asp-controller="Products" class="core-container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Brand" class="form-control" id="floatingBrand" placeholder="brand" />
                <label asp-for="Brand" class="control-label" for="floatingBrand"></label>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DeviceModel" class="form-control" id="floatingDeviceModel" placeholder="deviceModel"/>
                <label asp-for="DeviceModel" class="control-label" for="floatingDeviceModel"></label>
                <span asp-validation-for="DeviceModel" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control" id="floatingDescription" placeholder="description" />
                <label asp-for="Description" class="control-label" for="floatingDescription"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ImageUrl" class="form-control" id="floatingImg" placeholder="img" />
                <label class="control-label" for="floatingImg">Image Url</label>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Warranty" class="form-control" id="floatingWarranty" placeholder="Warranty"/>
                <label asp-for="Warranty" class="control-label" for="floatingWarranty"></label>
                <span asp-validation-for="Warranty" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Price" class="form-control" id="floatingPrice" placeholder="Price"/>
                <label asp-for="Price" class="control-label" for="floatingPrice"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Quantity" class="form-control" id="floatingQuantity" placeholder="Quantity"/>
                <label asp-for="Quantity" class="control-label" for="floatingQuantity"></label>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" id="floatingCategory" placeholder="category">
                <label asp-for="CategoryId" class="control-label" for="floatingCategory">Category</label>
                </select>
            </div>
            <div class="form-floating mb-3">
                <input type="submit" value="Create" class="btn btn-secondary fw-bold border-white bg-white my-2" />
            </div>
        </form>
    </div>
</div>
