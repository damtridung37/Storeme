@model RegisterViewModel

<div class="container col-xl-10 col-xxl-10 px-2 py-5">
    <div class="row align-items-center g-lg-2 py-5">
        <div class="col-lg-7 text-center text-lg-start">
            <h1 class="display-4 fw-bold lh-1 mb-5">Please, sign up</h1>
            <img src="~/svg/signup.svg" alt="Sign up" width="350"/>
            <p class="col-lg-10 fs-5 mt-4">Create an account to have full access to the store and be able to add products to your cart or wishlist and ordering them.</p>
        </div>
        <div class="col-md-10 mx-auto col-lg-5">
            <form class="core-container" asp-controller="Identity" asp-action="Register" method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control rounded-3" id="floatingInput" placeholder="Username">
                        <label asp-for="Username" for="floatingInput"></label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="FirstName" class="form-control rounded-3" id="floatingInputFn" placeholder="FN">
                        <label asp-for="FirstName" for="floatingInputFn"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Lastname" class="form-control rounded-3" id="floatingInputLn" placeholder="LN">
                        <label asp-for="Lastname" for="floatingInputLn"></label>
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Phone" class="form-control rounded-3" id="floatingInputPhone" placeholder="Phone">
                        <label asp-for="Phone" for="floatingInputPhone"></label>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Address" class="form-control rounded-3" id="floatingInputAddress" placeholder="Address">
                        <label asp-for="Address" for="floatingInputAddress"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control rounded-3" id="floatingEmail" placeholder="Email">
                        <label asp-for="Email" for="floatingEmail"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Password">
                        <label asp-for="Password" for="floatingPassword"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Sign up</button>
                    <small class="text-muted">By clicking Sign up, you agree to the terms of use.</small>
                </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

